#!/bin/sh

DAEMON="vllm"
PIDFILE="/var/run/$DAEMON.pid"
ENV_FILE="/etc/vllm/vllm.env"

# Source environment variables
[ -r "$ENV_FILE" ] && . "$ENV_FILE"

start() {
    printf "Starting $DAEMON: "
    start-stop-daemon -S -q -b -m -p "$PIDFILE" \
        -c vllm:vllm -x /usr/bin/python3 -- -m vllm.entrypoints.openai.api_server \
        --model "${VLLM_MODEL}" \
        --host 0.0.0.0 \
        --port 8000 \
        --gpu-memory-utilization "${VLLM_GPU_MEMORY_UTILIZATION:-0.85}" \
        --max-model-len "${VLLM_MAX_MODEL_LEN:-1024}"
    status=$?
    if [ "$status" -eq 0 ]; then
        echo "OK"
    else
        echo "FAIL"
    fi
    return "$status"
}

stop() {
    printf "Stopping $DAEMON: "
    start-stop-daemon -K -q -p "$PIDFILE"
    status=$?
    if [ "$status" -eq 0 ]; then
        rm -f "$PIDFILE"
        echo "OK"
    else
        echo "FAIL"
    fi
    return "$status"
}

restart() {
    stop
    sleep 1
    start
}

case "$1" in
    start|stop|restart)
        "$1";;
    reload)
        restart;;
    *)
        echo "Usage: $0 {start|stop|restart|reload}"
        exit 1
esac
